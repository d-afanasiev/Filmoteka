

     <div class="movie-container">
                {{#if poster_path}}
                  <img class="modal__image" src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="{{title}}">
                  {{else}}
                  <img data-id="{{id}}" class="film-list__img"
                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/488px-No-Image-Placeholder.svg.png"
                    alt="{{original_title}}">
                  {{/if}}
            </div>

            <div>
              <div >

                <h2>{{title}}</h2>

                <div>
                    <ul>
                      <li>Vote / Votes</li>
                      <li>Popularity</li>
                      <li>Original Title</li>
                      <li>Genre</li>
                    </ul>

                    <ul>
                      <li>
                         <span>{{vote_average}}</span>
                         <span>/</span>
                         <span>{{vote_count}}</span>
                      </li>

                      <li>{{popularity}}</li>

                      <li>{{original_title}}</li>

                      <li>
                           {{#each genres }}
                             <span>{{this.name}}{{#unless @last}},{{/unless}}</span>
                           {{/each}}

                         </li>
                    </ul>
                </div>


                <h3>About</h3>

                <p>{{overview}}</p>

              </div>
              <div>
                   <button type="button" class="modal__button-add" data-id="{{id}}">add to Watched</button>
                   <button type="button" class="modal__button-add-queue" data-id="{{id}}">add to Queue</button>
                </div>


